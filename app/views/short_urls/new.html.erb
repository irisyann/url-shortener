<div style="width: 100%; height: 300px; padding: 20px; display: flex; justify-content: center; flex-direction: column; align-items:center; margin-bottom: 30px;" class="bg-primary">
    <h1>
        <span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span>
        URL Shortener service
    </h1>
    <br>
    <%= link_to "Back to Home", root_path, :class => "btn btn-default btn-lg" %>
</div>

<div class="container">

    <div class="row">
        <div class="col-xs-5">
            <%= form_for @short_url do |f| %>

                <div>
                    <%= f.label "Enter your long URL: ", class: "form-label" %>
                </div>

                <div>
                    <%= f.text_field :target_url, class: "form-control input-lg" %>
                    <br>

                    
                            <% @short_url.errors.full_messages_for(:target_url).each do |message| %>
                                <div class="alert alert-danger" role="alert"><%= message %></div>
                            <% end %>
                        
                    
                </div>
                
                <br>
                <div>
                    <%= f.submit "Shorten my URL", class: "btn btn-primary" %>
                </div>
                
            <% end %>
        </div>
    </div>
</div>

<%= render "layouts/footer" %>